<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/darkred"
    android:orientation="vertical"
    >
    <GridLayout
        android:id="@+id/gvLoanDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Location"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:layout_row="0"
            android:textColor="@color/white"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailCaseLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BHARATPUR"
            android:layout_gravity="right"
            android:layout_row="0"
            android:textColor="@color/white"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sanctioned_amount"
            android:textAlignment="textEnd"
            android:layout_row="3"
            android:padding="5dp"

            android:textColor="@color/white"
            android:layout_column="0"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FM_Name"
            android:textAlignment="textEnd"
            android:layout_row="1"
            android:padding="5dp"

            android:textColor="@color/white"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailFmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FM_Name"
            android:layout_row="1"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fi_code"
            android:textAlignment="textEnd"
            android:layout_row="2"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailFiCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FI Code"
            android:layout_row="2"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/tvLoanDetailAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_row="3"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/periodOfLoan"
            android:textAlignment="textEnd"
            android:layout_row="4"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Months"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_row="4"
            android:layout_column="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interest_Rate"
            android:textAlignment="textEnd"
            android:layout_row="5"
            android:textColor="@color/white"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/tvLoanDetailInterestRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% p.a. Flat"
            android:layout_row="5"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_column="1"/>
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="6dp"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:gravity="center">

        <Button
            android:id="@+id/btnLoanDetailsDownloadDoc"
            android:padding="4dp"
            android:text="@string/download_Document"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/red"
            android:layout_height="wrap_content"/>

        <!--        <Button-->
        <!--            android:id="@+id/btnLoanDetailsRequestDisbursement"-->
        <!--            android:padding="@dimen/margin_3dp"-->
        <!--            android:text="@string/loan_detail_request_disb"-->
        <!--            android:ems="7"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"/>-->

    </LinearLayout>


    <ListView
        android:id="@+id/lvLoanDetails"
        android:layout_below="@+id/gvLoanDetail"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
    </ListView>



</LinearLayout>