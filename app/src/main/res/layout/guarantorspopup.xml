<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popupborder"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guarantor"
            android:textColor="@color/red"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/titleheading"
            android:fontFamily="@font/visbycfbold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhar_id"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">

                <EditText
                    android:id="@+id/editTextAadhar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Aadhaar ID"
                    android:inputType="number"
                    android:maxLength="12"
                    android:padding="10dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/aadhaarScanner"
                    android:paddingTop="35dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingHorizontal="25dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/camera_image1"/>

            </LinearLayout>

        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:elevation="2dp">
                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapCharacters"
                    android:padding="10dp"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/gurprofilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="25dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/profileimage"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:maxLength="3"
                        android:layout_height="match_parent"
                        android:hint="Age"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Date Of Birth *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">

                <EditText
                    android:id="@+id/editTextDob"
                    android:layout_width="match_parent"
                    android:inputType="date"
                    android:layout_height="match_parent"
                    android:hint="DOB"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/calender" />
            
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender *"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"
             />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <Spinner
                android:id="@+id/spinnerOptions1"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"            
            android:text="Guardian *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">
        
        <EditText
            android:id="@+id/editTextGuardian"
            android:layout_width="match_parent"
            android:inputType="textCapCharacters|textFilter"
            android:layout_height="match_parent"
            android:hint="Guardian"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address1 *"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">
            
        <EditText
            android:id="@+id/editTextAddress1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapCharacters"
            android:hint="Address1"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address2 *"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">
        
        <EditText
            android:id="@+id/editTextAddress2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textCapCharacters"
            android:hint="Address2"
            android:padding="10dp" />
            
        </androidx.cardview.widget.CardView>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address3 *"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/heading" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

            <EditText
                android:id="@+id/editTextAddress3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Address3"
                android:inputType="textCapCharacters"
                android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">
                    
                <EditText
                    android:id="@+id/editTextCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="City"
                    android:inputType="textCapCharacters|textFilter"
                    android:padding="10dp" />
                    
                </androidx.cardview.widget.CardView>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Pin Code *"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    app:cardElevation="2dp">
                    
                <EditText
                    android:id="@+id/editTextPincode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Pincode"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="10dp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="State Name *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading" />
        
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <Spinner
                android:id="@+id/spinnerOptions2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No *"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <EditText
            android:id="@+id/editTextMobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Voter Id *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <EditText
            android:id="@+id/editTextvoterid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Voter Id"
            android:maxLength="10"
            android:inputType="textCapCharacters"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Permament Account PAN No *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <EditText
            android:id="@+id/editTextPAN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="PAN Number"
            android:inputType="textCapCharacters"
            android:maxLength="10"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Driving license *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <EditText
            android:id="@+id/drivingLicense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="DL Number"
            android:maxLength="16"
            android:inputType="textCapCharacters"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marital Status *"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:visibility="gone"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <EditText
            android:id="@+id/maritalstatus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Marital Status"
            android:padding="10dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Relationship With Borrower *"
            android:textColor="@color/red"
            android:textSize="@dimen/heading"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="2dp"
            app:cardElevation="2dp">

        <Spinner
            android:id="@+id/spinnerOptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <Button
                android:id="@+id/updateGuarantor"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="@color/red"
                android:text="UPDATE"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="@color/red"
                android:text="DELETE"
                android:textSize="10dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>





