<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/deviceIdTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="70dp"
            android:text="Device ID"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <TextView
                android:gravity="center|left"
                android:hint="Device Id"
                android:id="@+id/deviceIdET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:backgroundTint="@color/white"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/userIDTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="User Id"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center|start"
            android:elevation="5dp">

            <TextView
                android:gravity="center|left"
                android:hint="User Id"
                android:id="@+id/userIDET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textCapCharacters"
                android:paddingStart="15dp"
                android:backgroundTint="@color/white"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Request Type"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Creator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Creator"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectcreator"
                android:hint="Select Creator"
                android:padding="12dp"
                android:gravity="center_vertical"
                android:background="@android:drawable/editbox_background"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Branch Codes (001,002,003 etc.)"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <EditText
                android:hint="001,002,003 etc."
                android:id="@+id/branchcodes"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/nameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <EditText
                android:singleLine="true"
                android:hint="Name"
                android:id="@+id/nameET"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawablePadding="10dp"
                android:paddingStart="10dp"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/mobileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="Mobile"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <EditText
                android:maxLength="10"
                android:singleLine="true"
                android:hint="9999999999"
                android:id="@+id/mobileET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/imeiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="IMEI NO. 1"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <EditText
                android:singleLine="true"
                android:hint="0000"
                android:id="@+id/imeiET"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:maxLength="15"
                android:backgroundTint="@color/white"
                android:textSize="18dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/creatorTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:text="IMEI No. 2"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="5dp">

            <EditText
                android:singleLine="true"
                android:id="@+id/imeiET2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:maxLength="15"
                android:drawablePadding="10dp"
                android:paddingStart="15dp"
                android:backgroundTint="@color/white"
                android:textSize="18dp" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/errorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
            android:layout_marginTop="16dp">


            <Button
                android:id="@+id/cancelButton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:backgroundTint="@color/darkred"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:text="Cancel" />

            <Button
                android:id="@+id/saveButton"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/darkred"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:text="Save" />

        </LinearLayout>




    </LinearLayout>
</ScrollView>