<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/visbycfregular"
        android:gravity="center"
        android:text="Application Form"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:textSize="@dimen/bigheading"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/onboard_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingHorizontal="16dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="38dp"
        app:cardElevation="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginHorizontal="45dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="46dp"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/aadhaar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Aadhaar"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/aadhaarCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/personalDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:text="Personal Details"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/personaldetailCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/financialInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:text="Financial Info"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/financialInfoCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/familyIncome"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:text="Family Income"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/familyCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/borrowings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:text="Borrowings"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/borrowingsCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/guarantors"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:text="Guarantors"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/gurrantorCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#F6F6F6" />

            <androidx.cardview.widget.CardView
                android:id="@+id/kycScanning"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:gravity="center_vertical"
                        android:paddingStart="40dp"
                        android:text="KYC Scanning"
                        android:fontFamily="@font/visbycfbold"
                        android:textSize="@dimen/subheading"
                        android:layout_weight=".5"/>
                    <CheckBox
                        android:id="@+id/kycScanningCheckBox"
                        android:button="@drawable/custom_checkbox"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
