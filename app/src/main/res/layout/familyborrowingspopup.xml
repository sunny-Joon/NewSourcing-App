<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/popupborder"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lender Name"
                android:textColor="@color/red" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/LenderName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Lender Name"
                android:padding="10dp" />
    </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lender Type"
                android:layout_marginTop="5dp"
                android:textColor="@color/red" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                app:cardElevation="2dp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/lenderType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"/>

            </androidx.cardview.widget.CardView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loan Used "
                android:textColor="@color/red" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
                android:id="@+id/spinnerOptions2"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

    </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reason For Loan"
                android:layout_marginTop="5dp"
                android:textColor="@color/red" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:elevation="2dp"
        android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spinnerOptions3"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Loan Amount "
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/editLoanamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="EMI Amount "
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/editTextEmiamount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"

                android:padding="10dp" />
            
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance Amount"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/red" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/balanceamount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is MFI"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="@color/red" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:layout_margin="2dp"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/isMFI"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="5dp"
                    android:padding="10dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/addBorrowings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:text="ADD/UPDATE"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="2dp"
                android:backgroundTint="@color/red"
                android:text="DELETE" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:text="CANCEL" />
            
        </LinearLayout>
</LinearLayout>