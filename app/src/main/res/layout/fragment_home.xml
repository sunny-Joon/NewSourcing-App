<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/teal_700"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/disbursmentbackground"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/vectorpaisalo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/vectorrupees"/>

        <TextView
            android:layout_width="150dp"
            android:fontFamily="@font/visbycfbold"
            android:textSize="@dimen/heading"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Monthly \n Disbursment Target"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:fontFamily="@font/visbycfregular"
            android:textSize="@dimen/heading"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/red_border"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="10,00,000" />

    </LinearLayout>


    <TextView
        android:id="@+id/txtCalcIncentive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle=""
        android:text="TAP TO \nCALCULATE INCENTIVE"
        android:gravity="center"
        android:background="@color/red"
        android:elevation="0dp"
        android:layout_gravity="center"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginEnd="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10 people will\nearn more \nincentive than \nyou."
                android:fontFamily="@font/visbycfbold"
                android:textSize="@dimen/heading"
                android:gravity="center_vertical"
                android:paddingHorizontal="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="5dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:backgroundTint="@color/darkred">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Earn more \n incentive"
                    android:fontFamily="@font/visbycfbold"
                    android:textSize="@dimen/heading"
                    android:layout_weight=".5"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="25dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="AB RUKNA NAHI"
                    android:textStyle="bold"
                    android:fontFamily="@font/visbycfbold"
                    android:textSize="@dimen/heading"
                    android:gravity="top|center_horizontal"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
