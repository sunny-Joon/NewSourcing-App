<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OnBoarding.ApplicationFormFragments.AadhaarFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_margin="24dp"
        app:cardMaxElevation="12dp"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/adhaarImage"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/profileimage"/>
                <TextView
                    android:id="@+id/aadhaarName"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textColor="@color/white"
                    android:text="@string/name"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/aadhar_id"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/aadhar_age"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarAge"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/aadhar_gender"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarGendre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/aadhar_dob"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarDOB"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/guardian"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarGuardian"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/mobile"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarmobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:layout_marginHorizontal="24dp"
        app:cardMaxElevation="12dp"
        app:cardCornerRadius="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/panno"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarPAN"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/applicant_driving_license"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarDrivingLicense"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/pincode"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarPincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=""
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/aadhar_city"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarCity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:text="@string/state"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>

                <TextView
                    android:id="@+id/aadhaarState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:text="Aadhaar Id"
                    android:layout_weight="1"
                    android:textSize="@dimen/heading"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/visbycfregular"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:cardCornerRadius="30dp"
            android:backgroundTint="@color/red"
            android:layout_margin="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/titleheading"
                    android:textColor="@color/red"
                    android:text="@string/loanamount"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/loanAmount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/titleheading"
                    android:textColor="@color/red"
                    android:text="0000000"
                    android:layout_weight="2"
                    android:textStyle="bold"
                    android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <CheckBox
            android:id="@+id/addressCheckBox"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/iscurrunt"
            android:layout_marginHorizontal="16dp"
            android:textSize="@dimen/heading"
            android:fontFamily="@font/visbycfregular"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/currentAddress"
            android:layout_width="match_parent"
            android:layout_margin="4dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/Address1"
                        android:layout_width="match_parent"
                        android:hint="@string/aadhar_address1"
                        android:inputType="textCapCharacters
"
                        android:layout_height="45dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/Address2"
                        android:layout_width="match_parent"
                        android:hint="@string/aadhar_address2"
                        android:inputType="textCapCharacters
"
                        android:layout_height="45dp"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/Address3"
                        android:layout_width="match_parent"
                        android:hint="@string/aadhar_address3"
                        android:inputType="textCapCharacters
"
                        android:layout_height="45dp"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:elevation="2dp">
                        <Spinner
                            android:id="@+id/acspAadharState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:padding="10dp"/>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:elevation="5dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/city"
                            android:layout_width="match_parent"
                            android:hint="@string/aadhar_city"
                            android:inputType="textCapCharacters
"
                            android:layout_height="45dp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:elevation="5dp"
                    android:layout_marginTop="8dp">

                    <EditText
                        android:id="@+id/pinCode"
                        android:layout_width="match_parent"
                        android:hint="@string/pincode"
                        android:inputType="number"
                        android:layout_height="45dp"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/aadhaarSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:textColor="@color/white"
            android:layout_margin="16dp"
            android:textSize="@dimen/heading"
            android:text="@string/submit"/>

    </LinearLayout>

    </ScrollView>

</FrameLayout>