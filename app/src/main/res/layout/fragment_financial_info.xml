<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".Fragments.OnBoarding.ApplicationFormFragments.FinancialInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bank_account_type"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <Spinner
                    android:id="@+id/bankAccountType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bank_account_number"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/bankAccountNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"/>

                </androidx.cardview.widget.CardView>

                <CheckBox
                    android:id="@+id/accountVerification"
                    android:button="@drawable/custom_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp" />


            </LinearLayout>
            <TextView
                android:id="@+id/tilBankAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/account_opening_date"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <EditText
                    android:id="@+id/account_date"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:id="@+id/ac_date_calender"
                    android:layout_width="match_parent"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:src="@drawable/calender"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/bank_ifsc"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/bankIFSCCode"
                    android:inputType="textCapCharacters"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:textSize="14dp"
                android:id="@+id/tvLoanAppFinanceBankName"
                android:paddingStart="10dp"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvLoanAppFinanceBankBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textColor="@color/green"
                android:textSize="14dp" />

        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/darkred"
                    android:fontFamily="@font/visbycfbold"
                    android:text="@string/income_Details"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/titleheading" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/rental_income"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/rentalIncome"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expense_Details"
                    android:textAlignment="center"
                    android:background="@color/darkred"
                    android:textSize="@dimen/titleheading"
                    android:textColor="@color/white"
                    android:fontFamily="@font/visbycfbold"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expenses_in_Rent"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseInRent"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expenses_for_Food"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseForFood"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expenses_for_Education"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseForEducation"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expenses_for_Health"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseForHealth"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/travel_expense"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseForTravelling"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/expenses_for_Entertainment"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/expenseForEntertainment"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/any_Other_Expenses"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <EditText
                    android:id="@+id/anyOtherExpense"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/house_Detail"
                    android:layout_margin="2dp"
                    android:textAlignment="center"
                    android:background="@color/darkred"
                    android:textSize="@dimen/titleheading"
                    android:textColor="@color/white"
                    android:fontFamily="@font/visbycfbold"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/house_type"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <Spinner
                    android:id="@+id/houseType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/roof_type"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <Spinner
                    android:id="@+id/roofType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/personal_toilet"
                android:textSize="@dimen/heading"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/visbycfregular"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="8dp">

                <Spinner
                    android:id="@+id/personalToilet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/submitfinancialInfo"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/submit"
                android:layout_margin="16dp"
                android:textSize="@dimen/heading"
                android:fontFamily="@font/visbycfbold"
                android:backgroundTint="@color/white"
                android:textColor="@color/red" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>