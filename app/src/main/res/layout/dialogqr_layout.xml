<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/darkred"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="@string/qr_code_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="5"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/crossbutton"
                    android:id="@+id/img_close"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_smcode"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:text="QR CODE PAYMENT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="@string/hindiqr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>




    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/righticon"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

    </LinearLayout>




    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_saveEmi"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/get_status"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="12dp"
            android:textColor="#BF0303"
            android:id="@+id/text_uploadimage"
            android:layout_marginTop="5dp"
            android:text="@string/imageupload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:id="@+id/button_Closedialog"
            android:layout_weight="1"
            android:text="@string/upload_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>





</LinearLayout>