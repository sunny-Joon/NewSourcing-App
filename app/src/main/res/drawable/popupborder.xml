<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Red border -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="#00ffffff" />
            <stroke
                android:width="2dp"
                android:color="#FF0000" />
        </shape>
    </item>
    <!-- Your content background -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set your desired background color here -->
        </shape>
    </item>
</layer-list>
